<h1>Login</h1>
<% form_for :session, @session, :url => session_path do |f| -%>
  <%= f.error_messages %>
  <div class='clearfix'>
    <div class='field session_username'>
      <%= f.label Refinery.authentication_login_field %>
      <%= f.text_field Refinery.authentication_login_field %>
    </div>
    <div class='field session_password'>
      <%= f.label :password %>
      <%= f.password_field :password, :autocomplete => 'off' %>
    </div>
  </div>
  <div class='field remember_me'>
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me, nil, :style=>'display:inline;' %>
  </div>
  <div class='form-actions'>
    <%= submit_tag 'Log in' %>
    or
    <%= link_to "Cancel", root_url %>
  </div>  
<% end -%>

<br/>
<div class='field forgot_password'>
  <%= link_to "I forgot my password", forgot_url %> |
  <%= link_to "Signup", signup_path %>
</div>
